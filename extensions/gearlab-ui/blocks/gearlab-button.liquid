
{% if block.settings.gl_button_route_switch == true %}
{% render 'b2b-gl-button-ui' %}
{% else %}
{% render 'main-gl-button-ui' %}
{% endif %}

{% schema %}
{
"name": "Gear Lab Button",
"target": "section",
"settings": [
  {
    "type": "text",
    "id": "gl_button_title",
    "label": "Title",
    "default": "GEAR LAB"
  },  
  {
    "type": "checkbox",
    "id": "gl_button_route_switch",
    "label": "Limit Gear Lab to B2B customers only",
    "info": "When enabled, non-B2B customers must sign in or register for a B2B account before they can proceed to checkout with their EPIK Gear Lab custom order.",
    "default": false
  },
]
}
{% endschema %}